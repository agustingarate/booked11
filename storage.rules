rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para los archivos PDF de usuarios
    match /users/{userId}/pdfs/{allPaths=**} {
      // Solo el usuario autenticado puede leer sus propios archivos
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Solo el usuario autenticado puede subir archivos a su propia carpeta
      // Validar que sea un archivo PDF y que no exceda 50MB
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.contentType == 'application/pdf'
                    && request.resource.size < 50 * 1024 * 1024; // 50MB
      
      // No se permiten actualizaciones de archivos
      allow update: if false;
      
      // Solo el usuario autenticado puede eliminar sus propios archivos
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Denegar acceso a cualquier otra ruta no especificada
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
