{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@common/*": [
        "./src/features/common/*"
      ],
      "@home/*": [
        "./src/features/home/*"
      ],
      "@profile/*": [
        "./src/features/profile/*"
      ],
      "@settings/*": [
        "./src/features/settings/*"
      ],
      "@features/*": [
        "./src/features/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}